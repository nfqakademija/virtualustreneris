{% extends "::admin-base.html.twig" %}

{% block title %}Administravimo skydinė{% endblock %}

{% block stylesheets %}
    {{ parent() }}
	<style>
		body {
			overflow: auto;
		}
	</style>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">sport-plan/list</h3>
                </div>
                {% for sportPlan in sportPlans %}

                    {{ sportPlan.id }}
                    {{ sportPlan.exerciseList }}
                    {{ sportPlan.gender }}
                    {{ sportPlan.experience }}
                    {{ sportPlan.description }}

                    <a href="{{ path('sport_plan_edit', {'id': sportPlan.id|default('1')}) }}">Redaguoti</a>
                    <a href="{{ path('sport_plan_delete', {'id': sportPlan.id|default('1')}) }}">Ištrinti</a><br>


                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}