{% extends "::admin-base.html.twig" %}

{% block title %}Administravimo skydinė{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">meal-plan/list</h3>
                </div>
                {% for mealPlan in mealPlans %}
                    {{ mealPlan.id }}
                    {{ mealPlan.caloriesNum }}
                    {{ mealPlan.goals }}

                    <br/>
                    {% for foodDishId in mealPlan.foodDishId|json_decode() %}
                        {% for dish in dishes %}
                            {% if foodDishId == dish.id %}
                                {{ dish.description }}<br>
                            {% endif %}
                        {% endfor %}

                        <a href="{{ path('meal_plan_edit', {'id': mealPlan.id|default('1')}) }}">Redaguoti</a>
                        <a href="{{ path('meal_plan_delete', {'id': mealPlan.id|default('1')}) }}">Ištrinti</a><br>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}