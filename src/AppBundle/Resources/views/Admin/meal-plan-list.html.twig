{% extends "::admin-base.html.twig" %}

{% block title %}Administravimo skydinė{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Mitybos programų sąrašas</h3>
                </div>
                {% for mealPlan in mealPlans %}
                    Programos id: {{ mealPlan.id }}<br>
                    Programos kalorijos: {{ mealPlan.caloriesNum }}<br>
                    Programos tikslas: {{ mealPlan.goals }}<br>
                    Valgių id: {{ mealPlan.foodDishId }}<br>

                    <a href="{{ path('meal_plan_edit', {'id': mealPlan.id|default('1')}) }}">Redaguoti</a>
                    <a href="{{ path('meal_plan_delete', {'id': mealPlan.id|default('1')}) }}">Ištrinti</a><br>
                    Mitybos plano valgiai pagal jų id: <br>
                    <table class="table table-hover" style="color: black; background-color: white;">
                        <thead>
                        <tr>
                            <th>Valgymai</th>
                            <th>Produktai</th>
                            <th>Baltymai</th>
                            <th>Angliavandeniai</th>
                            <th>Riebalai</th>
                            <th>Cukrus</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for foodDishId in mealPlan.foodDishId|json_decode() %}
                            {% for dish in dishes %}
                                {% if foodDishId == dish.id %}
                                    <tr>
                                        <td>Valgymas</td>
                                        <td>{{ dish.description }}</td>
                                        <td>{{ dish.proteinNum }}</td>
                                        <td>{{ dish.carbohydrateNum }}</td>
                                        <td>{{ dish.fatNum }}</td>
                                        <td>{{ dish.sugarNum }}</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                        </tbody>
                    </table>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}