{% extends "::base.html.twig" %}

{% block title %}Pagrindinis - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            overflow: auto;
        }
    </style>
{% endblock %}

{% block body %}

    <nav class="navbar navbar-default" style="margin-bottom: 0px;">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('homepage') }}"><img height="80" src="http://virtualustreneris.projektai.nfqakademija.lt/images/logo.png" alt="" /></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path('homepage') }}">Titulinis <span class="sr-only">(current)</span></a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Ieškoti<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('meal_plan_search') }}">Mitybos programos</a></li>
                            <li><a href="{{ path('sport_plan_search') }}">Sporto programos</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profilis <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('profile_meal_plan') }}">Mano mitybos programa</a></li>
                            <li><a href="{{ path('profile_sport_plan') }}">Mano sporto programa</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="{{ path('profile_clear') }}">Pašalinti programas</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>



    {% for flash_message in app.session.flashBag.get('message') %}
        <div class="flash-notice text-center" style="padding: 20px; color: black; background-color: white;">
            <h4>{{ flash_message }}<br> Ieškokite dar kartą spausdami <a href="{{ path('meal_plan_search') }}"><span class="label label-default">ČIA</span></a></h4>
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashBag.get('session') %}
        <div class="flash-notice text-center" style="padding: 20px; color: black; background-color: white;">
            <h4>{{ flash_message }}<br> Ją galite surasti spausdami <a href="{{ path('meal_plan_search') }}"><span class="label label-default">ČIA</span></a></h4>
        </div>
    {% endfor %}


    <div class="main">
                  {% for plan in plans %}
                      <ul class="list-group">
                          <li class="list-group-item text-center">Jūsų išvestas rekomanduojamas kalorijų skaičius paroje: {{ result }}<br></li>
                      </ul>

                      <ul class="list-group">

                      <div style="text-align:center;"><img src="http://virtualustreneris.projektai.nfqakademija.lt/images/logo.png"></div>
                      <h2 style="text-align: center; color: white; text-decoration: underline;">Mitybos programa</h2>

                      <div style="margin: 0px auto; width: 40%;">
                      <li class="list-group-item text-center" style="background-color: black; color: white;">Pagal jūsų parametrus išvestą kalorijų skaičių atrinkome jums programą, kuri priklauso {{ plan.caloriesNum }} kalorijų kategorijai</li>
                      <li class="list-group-item text-center" style="background-color: black; color: white;">Pagal jūsų tikslą, programa skirta: {{ plan.goals }}.<br>
                      Priklausomai nuo jo, metant svorį programoje dominuoja baltymų kiekis, auginant jį - angliavandenių.</li>
                          <div style="text-align: center; padding: 20px;  color: white;">Atminkite: tarp valgių turi būti 2-3 valandų tarpas.<br>
                          </div>
                      </div>
              </ul>

        <table class="table table-hover" style="color: black; background-color: white;">
            <thead>
            <tr>
                <th>Valgymai</th>
                <th>Produktai</th>
                <th>Baltymai</th>
                <th>Angliavandeniai</th>
                <th>Riebalai</th>
                <th>Cukrus</th>
                <th>Kalorijos</th>
            </tr>
            </thead>
            <tbody>
            {% for foodDishId in plan.foodDishId|json_decode() %}
                {% for dish in dishes %}
                    {% if foodDishId == dish.id %}
                        <tr>
                            <td>{{ loop.index }} valgymas</td>
                            <td>{{ dish.description }}</td>
                            <td>{{ dish.proteinNum }}</td>
                            <td>{{ dish.carbohydrateNum }}</td>
                            <td>{{ dish.fatNum }}</td>
                            <td>{{ dish.sugarNum }}</td>
                            <td>{{ dish.kcalNum }}</td>
                        </tr>
                    {% endif %}
            {% endfor %}
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

    {% endfor %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}