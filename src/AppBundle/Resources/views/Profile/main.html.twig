            js.src = "//connect.facebook.net/lt_LT/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jsdk'));

        function testAPI() {
            console.log('Welcome!  Fetching your information.... ');
