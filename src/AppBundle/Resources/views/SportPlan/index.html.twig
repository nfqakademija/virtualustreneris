{% extends "::base.html.twig" %}

{% block title %}Pagrindinis - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            overflow: auto;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="main" style="background-color: white; padding: 50px;">

        <div class="content">

            <div class="top-text">
                <p>Ieškokite sau pritaikytos sporto programos</p>
            </div>

                <div class="form-inline">
                    {{ form_start(form, {'action': path('sport_plan_result')}) }}
                    <div class="form-group">
                        {{ form_label(form.gender, 'Lytis') }}
                        {{ form_errors(form.gender) }}
                        {{ form_widget(form.gender) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.experience, 'Patirtis') }}
                        {{ form_errors(form.experience) }}
                        {{ form_widget(form.experience) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.ageCategory, 'Amžiaus kategorija') }}
                        {{ form_errors(form.ageCategory) }}
                        {{ form_widget(form.ageCategory) }}
                    </div>

                    <div class="btn-group" role="group">

                        {{ form_label(form.goals, 'Tikslas') }}
                        {{ form_errors(form.goals) }}
                        {{ form_widget(form.goals) }}
                    </div><br><br>
                    {{ form_end(form) }}
                </div>


        </div>



        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="js/bootstrap.min.js"></script>


    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
