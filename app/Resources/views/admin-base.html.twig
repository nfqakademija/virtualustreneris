<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}{{ "Virtualus Treneris" }}{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico')}}">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
        <link rel="stylesheet" href="{{ asset('css/Admin/AdminLTE.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/Admin/skins/skin-blue.min.css') }}">
    {% endblock %}
    {% block canonical_meta %}{% endblock %}
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

    <!-- Main Header -->
    <header class="main-header">

        <!-- Logo -->
        <a href="http://virtualustreneris.projektai.nfqakademija.lt/admin" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>A</b>LT</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>Admin</b>LTE</span>
        </a>

        <!-- Header Navbar -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only"></span>
            </a>
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">

                    <!-- User Account Menu -->
                    <li class="dropdown user user-menu">
                        <!-- Menu Toggle Button -->
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <!-- The user image in the navbar-->
                            <img src="http://virtualustreneris.projektai.nfqakademija.lt/images/avatar.png" class="user-image" alt="User Image">
                            <!-- hidden-xs hides the username on small devices so only the image appears. -->
                            <span class="hidden-xs">{{ '%username%'|trans({'%username%': app.user.email}, 'FOSUserBundle') }}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- The user image in the menu -->
                            <li class="user-header">
                                <img src="http://virtualustreneris.projektai.nfqakademija.lt/images/avatar.png" class="img-circle" alt="User Image">

                                <p>
                                    {{ '%username%'|trans({'%username%': app.user.email}, 'FOSUserBundle') }}
                                </p>
                            </li>
                            <!-- /.row -->
                            </li>
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                </div>
                                <div class="pull-right">
                                    <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-flat">
                                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">

            <!-- Sidebar Menu -->
            <ul class="sidebar-menu">
                <li class="header">Pasirinkite:</li>
                <!-- Optionally, you can add icons to the links -->
                <li class="active"><a href="{{ path('admin_page') }}"><i class="fa fa-link"></i> <span>Pagrindinis</span></a></li>
                <li class="treeview">
                    <a href="#"><i class="fa fa-link"></i> <span>Mitybos Programos</span>
                        <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="{{ path('dishes_create') }}">Naujo patiekalo įtraukimas</a></li>
                        <li><a href="{{ path('dishes_list') }}">Esamų patiekalų sąrašas</a></li>
                        <li><a href="{{ path('alternatives_create') }}">Naujos alternatyvos įtraukimas</a></li>
                        <li><a href="{{ path('alternatives_list') }}">Esamų alternatyvų sąrašas</a></li>
                        <li><a href="{{ path('meal_plan_create') }}">Mitybos programos įtraukimas</a></li>
                        <li><a href="{{ path('meal_plan_list') }}">Mitybos programų sąrašas</a></li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#"><i class="fa fa-link"></i> <span>Sporto Programos</span>
                        <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="{{ path('exercises_create') }}">Naujo pratimo įtraukimas</a></li>
                        <li><a href="{{ path('exercises_list') }}">Esamų pratimų sąrašas</a></li>
                        <li><a href="{{ path('sport_plan_create') }}">Sporto programos įtraukimas</a></li>
                        <li><a href="{{ path('sport_plan_list')}}">Sporto programų sąrašas</a></li>
                    </ul>
                </li>
            </ul>
            <!-- /.sidebar-menu -->
        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                {% block contentHeaderTitle %}
                {% endblock %}
            </h1>
        </section>

        <!-- Main content -->
        <section class="content" style="margin-top: 0px;">
            {% block container %}
                {% block header %}
                    {% include "::inc/header.html.twig" %}
                {% endblock %}
                {% block body %}{% endblock %}
            {% endblock %}
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">
            <strong>&copy; 2017 &nbsp; VA komanda</strong>
        </div>
        <!-- Default to the left -->
        <a href="http://virtualustreneris.projektai.nfqakademija.lt/" target="_blank">Virtualus Treneris</a>
    </footer>

    <div class="control-sidebar-bg"></div>
</div>

{% block footer %}
    {% include "::inc/footer.html.twig" %}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/Admin/jquery-2.2.3.min.js') }}"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="{{ asset('js/Admin/script.min.js') }}"></script>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
{% endblock %}
</body>
</html>